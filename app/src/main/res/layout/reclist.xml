<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/textReclistHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="録音ファイル"
       	android:paddingLeft="8dp"
        android:background="#0087FF"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        />
        
    <ListView 
        android:id="@+id/listReclist" 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#0087FF"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        
        <Button 
            android:id="@+id/btnReclistDelete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClickReclistDelete"
            android:text="削除"
            />
        <Button 
            android:id="@+id/btnReclistSelectAll"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClickReclistSelectAll"
            android:text="全選択"
            />
        
    </LinearLayout>

</LinearLayout>
